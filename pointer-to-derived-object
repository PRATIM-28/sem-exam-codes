//pointers to objects
#include<iostream>
using namespace std;

class base
{
    public:
    int a;
    void show()
    {
        cout<<"a="<<a<<endl;
    }
};

class derived:public base
{
    public:
    int b;
    void show()
    {
        cout<<"a="<<a<<endl;
        cout<<"b="<<b<<endl;
    }
};

int main()
{
    base *ptr;
    base b1;
    ptr=&b1;
    ptr->a=10;
    ptr->show();
    
    
    derived d1;
    ptr=&d1;
    ptr->a=20;
    ptr->show();
    
    derived *ptr2;
    ptr2=&d1;
    ptr2->a=50;
    ptr2->b=100;
    ptr2->show();
    return 0;
}























